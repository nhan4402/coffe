@model AppUserModel
@{
	ViewData["title"] = "Update Account";
}

<section id="form">
	<!--form-->

	<div class="container">
		<div class="col-md-9"> 
			<form asp-action="UpdateinfoAccount" asp-asp-controller="Account" method="POST">
				<input type="hidden" asp-for="Id" />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label>Username</label>
					<input asp-for="UserName" readonly class="form-control"> </input>
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label>Email</label>
					<input asp-for="Email" class="form-control"> </input>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label>Phone</label>
					<input asp-for="PhoneNumber" class="form-control"> </input>
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label>Nghề nghiệp</label>
					<input asp-for="occupation" class="form-control"> </input>
					<span asp-validation-for="occupation" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button class="btn btn-primary">Update</button>
					
				</div>
				
			</form>
		</div>
		
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}