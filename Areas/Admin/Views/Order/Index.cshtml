﻿
@model IEnumerable<OrderModel>

@{
    ViewData["title"] = "List Order";

    

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>List Order</h3>

    

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Code</th>           
                <th>UserName</th>
                <th>Order Status</th>
                <th>Created Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ordercode</td>
                   
                    <td>@item.UserName</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text text-success">Đơn hàng mới</span>
                        }
                        else if (item.Status == 2)
                        {
                            <span class="text text-success">Đã giao hàng</span>
                        }
                        else
                        {

                            <span class="text text-danger">Đã hủy</span>
                        }
                    </td>
                    <td>@item.CreatedDate.ToString("dd-MM-yyyy")</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.Ordercode">View Order</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Order" asp-route-ordercode="@item.Ordercode">Delete</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @{
        int currentPage = Convert.ToInt32(ViewData["CURENT_PAGE"]);
        int totalPages = Convert.ToInt32(ViewData["TOLTAL_PAGE"]);
        int limit = Convert.ToInt32(ViewData["LIMIT"]);

        string basePath = Url.Action("Index", "Order", new { area = "Admin" });
    }

    <div class="d-flex justify-content-center align-items-center my-3">
        <nav>
            <ul class="pagination mb-0">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@($"{basePath}?page={currentPage - 1}&limit={limit}")" aria-label="Previous">
                            <i class="fa fa-angle-left"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Previous">
                            <i class="fa fa-angle-left"></i>
                        </span>
                    </li>
                }

                <li class="page-item disabled">
                    <span class="page-link">@currentPage of @totalPages</span>
                </li>

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@($"{basePath}?page={currentPage + 1}&limit={limit}")" aria-label="Next">
                            <i class="fa fa-angle-right"></i>

                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Next">
                            <i class="fa fa-angle-right"></i>
                        </span>
                    </li>
                }
            </ul>
        </nav>


    </div>
   
</body>
</html>